{{#partial "contenido"}}

    <div class="container-fluid">
    <div id="identification" class="d-flex align-items-center fs-1 mt-4">
        <div class="ms-5 mt-3 mb-4 d-flex">
            <h3>ABM Rubros y modelos de heladera</h3>
        </div>
    </div>
</div>

<div class="container-fluid" style="margin-top: -1rem; ; width: 100rem">
    <!-- Rubros -->
    <h4 class="d-flex justify-content-center" style="font-weight: bolder">Rubros</h4>
    <div class="row">
        <div class="col-lg">
            <!-- Alta -->
            <h4 class="d-flex justify-content-center">Alta</h4>
            <div class="form-group">
                <label for="rubro_nuevo">Nombre del nuevo rubro</label>
                <input type="text" id="rubro_nuevo" name="rubro_nuevo" placeholder="Nombre">
            </div>
        </div>
        <div class="col-lg" style="width: max-content">
            <!-- Baja -->
            <h4 class="d-flex justify-content-center">Baja</h4>
                <div class="form-group">
                    <label for="rubro_baja">Rubro a dar de baja</label>
                    <select id="rubro_baja" name="rubro_baja">
                        <option value="0">Ninguno seleccionado</option>
                        <option value="3">Tecnología</option>
                        <option value="7">Cocina</option>
                    </select>
                </div>
        </div>
        <div class="col-lg">
            <!-- Modificacion -->
            <h4 class="d-flex justify-content-center">Modificación</h4>
            <div class="form-group">
                <label for="rubro_elegido_mod">Rubro a modificar</label>
                <select id="rubro_elegido_mod" name="rubro_elegido_mod">
                    <option value="0">Ninguno seleccionado</option>
                    <option value="3">Tecnología</option>
                    <option value="7">Cocina</option>
                </select>
            </div>
            <div class="form-group">
                <label for="rubro_nombre_mod">Nombre nuevo del rubro</label>
                <input type="text" id="rubro_nombre_mod" name="rubro_nombre_mod" placeholder="Nombre">
            </div>


        </div>
    </div>

    <!-- Modelos -->
    <h4 class="d-flex justify-content-center" style="font-weight: bolder">Modelos</h4>
    <div class="row">
        <div class="col-lg">
            <!-- Alta -->
            <h4 class="d-flex justify-content-center">Alta</h4>
            <div class="form-group">
                <label for="modelo_nuevo">Nombre del nuevo modelo</label>
                <input type="text" id="modelo_nuevo" name="modelo_nuevo" placeholder="Nombre">
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="modelo_nuevo_temp_max">Temperatura máxima en °C</label>
                        <input type="number" id="modelo_nuevo_temp_max" name="modelo_nuevo_temp_max" placeholder="Máx.">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="modelo_nuevo_temp_min">Temperatura mínima en °C</label>
                        <input type="number" id="modelo_nuevo_temp_min" name="modelo_nuevo_temp_min" placeholder="Mín.">
                    </div>
                </div>
            </div>

        </div>
        <div class="col-lg">
            <!-- Baja -->
            <h4 class="d-flex justify-content-center">Baja</h4>
            <div class="form-group">
                <label for="modelo_elegido_baja">Modelo a dar de baja</label>
                <select id="modelo_elegido_baja" name="modelo_elegido_baja">
                    <option value="0">Ninguno seleccionado</option>
                    <option value="3">Samsung1</option>
                    <option value="7">Samsung2</option>
                </select>
            </div>
        </div>
        <div class="col-lg">
            <!-- Modificacion -->
            <h4 class="d-flex justify-content-center">Modificación</h4>
            <div class="form-group">
                <label for="modelo_elegido_mod">Modelo a modificar</label>
                <select id="modelo_elegido_mod" name="modelo_elegido_mod">
                    <option value="0">Ninguno seleccionado</option>
                    <option value="3">Samsung1</option>
                    <option value="7">Samsung2</option>
                </select>
            </div>
            <div class="form-group">
                <label for="modelo_mod">Nombre nuevo del modelo</label>
                <input type="text" id="modelo_mod" name="modelo_mod" placeholder="Nombre">
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="modelo_temp_max_mod">Temperatura máxima en °C</label>
                        <input type="number" id="modelo_temp_max_mod" name="modelo_temp_max_mod" placeholder="Máx.">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="modelo_temp_min_mod">Temperatura mínima en °C</label>
                        <input type="number" id="modelo_temp_min_mod" name="modelo_temp_min_mod" placeholder="Mín.">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container text-center">
        <button type="submit" class="btn btn-primary btn-lg">Guardar</button>
    </div>
</div>

{{/partial}}
