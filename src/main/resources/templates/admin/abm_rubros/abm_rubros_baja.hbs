{{#partial "contenido"}}

    <div class="container-fluid">
        <div id="identification" class="d-flex align-items-center fs-1 mt-4">
            <div class="ms-5 mt-3 mb-4 d-flex">
                <h3>Baja Rubro</h3>
            </div>
        </div>
    </div>

    <div class="container-fluid" style="margin-top: -1rem; ; width: 100rem">
        <!-- Rubros -->
        <h4 class="d-flex justify-content-center" style="font-weight: bolder">Rubros</h4>
        <form action="/dashboard/rubros/baja" method="post">
            <div class="row">
                <div class="col-lg" style="width: max-content">
                    <!-- Baja -->
                    <h4 class="d-flex justify-content-center">Baja</h4>
                    <div class="form-group">
                        <label for="rubro_baja">Rubro a dar de baja *</label>
                        <select id="rubro_baja" name="rubro_baja" required>
                            <option value="0">Ninguno seleccionado</option>
                            {{#each rubros}}
                                <option value="{{this.id}}">{{this.nombre}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            </div>

            <div class="container text-center">
                <button type="submit" class="btn btn-primary btn-lg" id="guardar-btn" disabled>Guardar</button>
            </div>
        </form>
    </div>

    <script>
        document.getElementById('rubro_baja').addEventListener('change', function() {
            var guardarBtn = document.getElementById('guardar-btn');
            if (this.value == "0") {
                guardarBtn.disabled = true;
            } else {
                guardarBtn.disabled = false;
            }
        });
    </script>

{{/partial}}
