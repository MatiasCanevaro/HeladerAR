{{#partial "contenido"}}
    <div class="container-fluid">
        <div id="identification" class="d-flex align-items-center fs-1 mt-4">
            <div class="ms-5 mt-3 mb-4 d-flex">
                <h3>Alta Persona Vulnerable</h3>
            </div>
        </div>
    </div>

    <div class="container-fluid" style="margin-top: -1rem; width: 100rem">
        <div class="row">
            <div class="col-lg">
                <h4 class="d-flex justify-content-center">Alta</h4>
                <label for="nombre">Nombre *</label>
                <input type="text" id="nombre" name="nombre" placeholder="Nombre" required>
            </div>
            <div class="form-group">
                <label for="apellido">Apellido *</label>
                <input type="text" id="apellido" name="apellido" placeholder="Apellido" required>
            </div>
            <div class="form-group">
                <label for="fecha_nacimiento">Fecha de Nacimiento *</label>
                <input type="date" id="fecha_nacimiento" name="fecha_nacimiento" required>
            </div>
            <div class="form-group">
                <label for="tipo_documento">Tipo de Documento</label>
                <select id="tipo_documento" name="tipo_documento">
                    <option value="DNI">Documento de Identidad</option>
                    <option value="LE">Libreta de Enrolamiento</option>
                    <option value="LC">Libreta Cívica</option>
                </select>
            </div>
            <div class="form-group">
                <label for="numero_documento">Número de Documento</label>
                <input type="number" id="numero_documento" name="numero_documento" placeholder="Número de documento">
            </div>

            <div class="form-group">
                <label for="calle">Dirección: Calle</label>
                <input type="text" id="calle" name="calle">
            </div>
            <div class="form-group">
                <label for="altura">Dirección: Altura</label>
                <input type="text" id="altura" name="altura">
            </div>
            <div class="form-group">
                <label for="piso">Dirección: Piso</label>
                <input type="text" id="piso" name="piso">
            </div>
            <div class="form-group">
                <label for="cp">Dirección: Código postal</label>
                <input type="text" id="cp" name="cp">
            </div>
            <div class="form-group">
                <label for="ciudad">Dirección: Ciudad</label>
                <input type="text" id="ciudad" name="ciudad">
            </div>
            <div class="form-group">
                <label for="provinciaNombre">Dirección: Provincia</label>
                <select id="provinciaNombre" name="provinciaNombre" class="form-group">
                    {{#each provincias}}
                        <option value="nombreProvincia">{{this.nombre}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
    </div>
    <div class="container text-center">
        <button type="submit" class="btn btn-primary btn-lg">Guardar</button>
    </div>
{{/partial}}
{{> templates/bases/base_admin}}