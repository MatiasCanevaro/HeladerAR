{{#partial "contenido"}}
    <div class="container-fluid">
        <div id="identification" class="d-flex align-items-center fs-1 mt-4">
            <div class="ms-5 mt-3 mb-4 d-flex">
                <h3>Modificación Persona Jurídica</h3>
            </div>
        </div>
    </div>

    <!-- Modificación -->
    <div class="container-fluid" style="margin-top: -1rem; width: 100rem">
        <form id="registroForm" method="POST" action=""> <!-- que pasa con la acción? se puede parametrizar con hbs? -->
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col">
                    <div class="container">
                        {{#each primeraTanda}}
                            <div class="form-group">
                                <label for="{{id}}">{{pregunta}}</label>
                                <input type="{{type}}" id="{{id}}" name="{{id}}" placeholder="{{placeholder}}" {{required}}> <!--este required la idea es pasarle literalmente required o nada-->
                            </div>
                        {{/each}}
                    </div>
                </div>
                <div class="col">
                    <div class="container">
                        {{#each segundaTanda}}
                            <div class="form-group">
                                <label for="{{id}}">{{pregunta}}</label>
                                <input type="{{type}}" id="{{id}}" name="{{id}}" placeholder="{{placeholder}}" {{required}}> <!--este required la idea es pasarle literalmente required o nada-->
                            </div>
                        {{/each}}
                    </div>
                </div>

                <div class="container text-center">
                    <div class="form-group">
                        <input type="hidden" id="cantidadDePantallasAMostrar" name="cantidadDePantallasAMostrar" value="{{cantidadDePantallasAMostrar}}">
                        <button type="submit" class="btn btn-primary-alt">Continuar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
{{/partial}}
{{> templates/bases/base_admin}}