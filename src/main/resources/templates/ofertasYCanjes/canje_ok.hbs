{{#partial "contenido"}}
    <div class="d-flex position-absolute top-50 start-50 translate-middle">
        <div class="card-lg">
            <div class="text-center my-2">
                <h1 class="mb-4">¡Su canje fue exitoso!</h1>
                <i class="bi bi-balloon-heart display-1"></i>
            </div>
            <div class="container text-center mt-4"> <!-- Added margin-top class -->
                <h2 class="mb-4">Detalles del Producto Canjeado</h2> <!-- Added margin-bottom class -->
                <p><strong>Nombre:</strong> {{producto.nombre}}</p>
                <p><strong>Descripción:</strong> {{producto.descripcion}}</p>
                <img src="{{producto.pathImagen}}" alt="Imagen del Producto" class="mx-auto d-block" style="width: 150px; height: auto; margin-top: 10px;">
                <a href="/dashboard/catalogo" type="button" class="btn btn-primary btn-lg mx-2 mt-4">Volver al catálogo</a>
            </div>
        </div>
    </div>
{{/partial}}
{{> templates/bases/base }}