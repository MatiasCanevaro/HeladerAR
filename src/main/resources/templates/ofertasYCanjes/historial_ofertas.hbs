{{#partial "contenido"}}
    <div class="container-fluid d-flex flex-column" style="min-height: 90vh;">
        <div class="row flex-grow-1">
            <div class="col-12">
                <div class="text-start my-2">
                    <h1 class="mt-4 ms-4">Historial de Ofertas</h1>
                </div>
                <div class="container text-center mt-4">
                    <div class="overflow-auto" style="max-height: 50vh;">
                        {{#if historialOfertas}}
                            {{#each historialOfertas}}
                                <div class="card mb-3" style="width: 18rem; margin: 0 auto;">
                                    <img src="{{this.pathImagen}}" class="card-img-top" alt="Imagen del Producto" style="width: 150px; height: auto; margin: 10px auto;">
                                    <div class="card-body">
                                        <h5 class="card-title">{{this.nombre}}</h5>
                                        <p class="card-text">{{this.descripcion}}</p>
                                        <p><strong>Puntos Necesarios:</strong> {{this.cantidadDePuntosNecesariosParaAccederAlBeneficio}}</p>
                                    </div>
                                </div>
                            {{/each}}
                        {{else}}
                            <div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
                                <div class="card mb-3" style="width: 18rem;">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Todavía no se han realizado ofertas</h5>
                                        <i class="bi bi-emoji-frown display-3"></i>
                                    </div>
                                </div>
                            </div>
                        {{/if}}
                    </div>
                    <a href="/dashboard/catalogo" type="button" class="btn btn-primary btn-lg mt-4">Volver al catálogo</a>
                </div>
            </div>
        </div>
    </div>
{{/partial}}
{{> templates/bases/base }}