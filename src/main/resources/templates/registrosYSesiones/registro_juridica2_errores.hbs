{{#partial "archivo_css"}}
    <link rel="stylesheet" href="css/index.css">
{{/partial}}
{{#partial "contenido"}}

    <div class="container-fluid justify-content-center align-items-center">
        <div id="identification" class="container d-flex">
            <div class="ms-5 mt-3 mb-4">
                <h3>2 de 2: Contacto y Contribuciones</h3>
                <p>Los campos marcados con * son obligatorios.</p>
            </div>
        </div>

        {{#if errores}}
            <div class="alert alert-danger">
                <h4>Se encontraron los siguientes errores:</h4>
                <ul>
                    {{#each errores.resultado}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}

        <form method="POST" action="/registro/persona_juridica/paso2">
            <div class="row">
                <div class="container d-flex justify-content-center align-items-center">
                    <div class="col">
                        <div class="container">
                            <div class="form-group">
                                <label for="email">Email *</label>
                                <input type="email" id="email" name="email" placeholder="Email" required>
                            </div>

                            <div class="form-group">
                                <label for="password">Contraseña *</label>
                                <input type="password" id="password" name="password" placeholder="Contraseña" required>
                            </div>

                            <div class="form-group">
                                <label for="confirm-password">Confirme su contraseña *</label>
                                <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirmar contraseña" required>
                            </div>

                            <div class="form-group">
                                <label for="contact">Elegí algún medio de contacto</label>
                                <select id="contact" name="contact" onchange="toggleContactNumber()">
                                    <option value="null">Ninguno</option>
                                    <option value="whatsapp">Whatsapp</option>
                                    <option value="telephone-number">Teléfono</option>
                                    <option value="email">Correo electrónico</option>
                                </select>
                            </div>

                            <div class="form-group" id="contact-number-group">
                                <label for="contact-number">Número de Contacto</label>
                                <input type="number" id="contact-number" name="contact-number" placeholder="Número de contacto">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container d-flex justify-content-center align-items-center">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Seleccioná tus formas de contribución (al menos una requerida):</h5>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="money" id="money" name="contribution[]">
                                    <label class="form-check-label" for="money">
                                        Donacion de Dinero
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="fridge" id="fridge" name="contribution[]">
                                    <label class="form-check-label" for="fridge">
                                        Hacerse cargo de una heladera
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="ps" id="ps" name="contribution[]">
                                    <label class="form-check-label" for="ps">
                                        Ofrecer productos y servicios
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container text-center mt-4">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary-alt">Enviar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

{{/partial}}
{{#partial "scripts"}}
    <script>
        function toggleContactNumber() {
            const contactSelect = document.getElementById('contact').value;
            const contactNumberGroup = document.getElementById('contact-number-group');

            if (contactSelect === 'null') {
                contactNumberGroup.style.display = 'none';
            } else {
                contactNumberGroup.style.display = 'block';
            }
        }

        // Ejecutar la función al cargar la página para ocultar inicialmente si está seleccionado "Ninguno"
        document.addEventListener('DOMContentLoaded', function() {
            toggleContactNumber();
        });
    </script>
{{/partial}}
