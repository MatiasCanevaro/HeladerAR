{{#partial "archivo_css"}}
    <link rel="stylesheet" href="css/botones/botones_home_sin_sesion.css">
    <link rel="stylesheet" href="css/index.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
{{/partial}}

{{#partial "contenido"}}
    <div class="container-fluid">
        <div id="identification">
            <div class="ms-5 mt-3 mb-4">
                <h3>1 de 2: Identificación</h3>
                <p>Los campos marcados con * son obligatorios.</p>
            </div>
        </div>
        <!-- Sección de mensajes de error globales -->
        {{#if errores}}
            <div class="alert alert-danger">
                <ul>
                    {{#each errores}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}
        <form id="registroForm" method="POST" action="/registro/persona_fisica/paso1">
            <div class="row d-flex justify-content-center align-items-center">
                    <div class="col">
                        <div class="container">
                                     <div class="form-group">
                                <label for="name">Nombre *</label>
                                <input type="text" id="name" name="name" placeholder="Nombre" required>
                            </div>

                            <div class="form-group">
                                <label for="last-name">Apellido *</label>
                                <input type="text" id="last-name" name="last-name" placeholder="Apellido" required>
                            </div>

                            <div class="form-group">
                                <label for="id">Tipo de Documento *</label>
                                <select id="id" name="id" required>
                                    <option value="DNI">Documento de Identidad</option>
                                    <option value="LE">Libreta de Enrolamiento</option>
                                    <option value="LC">Libreta Cívica</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="id-number">Número de Documento *</label>
                                <input type="number" id="id-number" name="id-number" placeholder="Número de Documento" required>
                            </div>

                            <div class="form-group">
                                <label for="birthday">Fecha de Nacimiento *</label>
                                <input type="date" id="birthday" name="birthday" required>
                            </div>
                        </div>
                    </div>

                    <div class="col">
                        <div class="container">
                            <div class="form-group">
                                <label for="street">Calle *</label>
                                <input type="text" id="street" name="street" placeholder="Calle" required>
                            </div>

                            <div class="form-group">
                                <label for="height">Altura *</label>
                                <input type="text" id="height" name="height" placeholder="Altura"  required>
                            </div>

                            <div class="form-group">
                                <label for="floor">Piso</label>
                                <input type="text" id="floor" name="floor" placeholder="Piso">
                            </div>

                            <div class="form-group">
                                <label for="pc">Código Postal *</label>
                                <input type="number" id="pc" name="pc" placeholder="Código postal" required>
                            </div>
                            <div class="form-group" >
                                <label for="ciudad">Ciudad *</label>
                                <select id="ciudad" name="ciudad" required>
                                    {{#each ciudades}}
                                        <option value="{{this.id}}">{{this.nombre}}, {{this.provincia.nombre}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                    </div>

                <div class="container text-center">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary-alt">Continuar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
{{/partial}}
{{#partial "scripts"}}
    <script src="js/verificar_fecha_nacimiento.js"></script>
    <script>
        $('#ciudad').select2({
            placeholder: 'Buscar ciudad',
            width: 'resolve' // Asegura que se ajuste al contenedor padre
        });

    </script>
{{/partial}}

