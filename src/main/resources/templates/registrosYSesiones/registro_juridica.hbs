{{#partial "archivo_css"}}
    <link rel="stylesheet" href="css/index.css">
{{/partial}}
{{#partial "contenido"}}
    <div class="container-fluid justify-content-center align-items-center">
        <div id="identification">
            <div class="ms-5 mt-3 mb-4">
                <h3>1 de 2: Identificación</h3>
                <p>Los campos marcados con * son obligatorios.</p>
            </div>
        </div>
        <!-- Sección de mensajes de error globales -->
        {{#if errores}}
            <div class="alert alert-danger">
                <ul>
                    {{#each errores}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}
        <form method="POST" action="/registro/persona_juridica/paso1">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col">
                    <div class="container">
                        <div class="form-group">
                            <label for="name">Razón Social *</label>
                            <input type="text" id="razon-social" name="razon-social" placeholder="Razón social" required>
                        </div>

                        <div class="form-group">
                            <label for="rubro">Rubro *</label>
                            <select id="rubro" name="rubro" required>
                                {{#each rubros}}
                                    <option value="{{this.nombre}}">{{this.nombre}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="category">Tipo de Organización *</label>
                            <select id="category" name="category" required>
                                <option value="gubernamental">Gubernamental</option>
                                <option value="ngo">Organización No Gubernamental</option>
                                <option value="company">Empresa</option>
                                <option value="institution">Institución</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="provincia">Provincia *</label>
                            <select id="provincia" name="provinciaNombre" required>
                                {{#each provincias}}
                                    <option value="{{this.nombre}}">{{this.nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="container">
                        <div class="form-group">
                            <label for="street">Calle</label>
                            <input type="text" id="street" name="street" placeholder="Calle">
                        </div>

                        <div class="form-group">
                            <label for="height">Altura</label>
                            <input type="text" id="height" name="height" placeholder="Altura" >
                        </div>

                        <div class="form-group">
                            <label for="floor">Piso</label>
                            <input type="text" id="floor" name="floor" placeholder="Piso" >
                        </div>

                        <div class="form-group">
                            <label for="pc">Código postal</label>
                            <input type="number" id="pc" name="pc" placeholder="Código postal" >
                        </div>
                    </div>
                </div>
            </div>

                <div class="container text-center">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary-alt">Continuar</button>
                    </div>
                </div>
        </form>
    </div>

{{/partial}}
