{{#partial "archivo_css"}}
    <link rel="stylesheet" href="css/botones/botones_home_sin_sesion.css">
    <link rel="stylesheet" href="css/index.css">
{{/partial}}
{{#partial "contenido"}}
    <div class="container-fluid">
        <div id="identification">
            <div class="ms-5 mt-3 mb-4">
                <h3>2 de 2: Contacto y Contribuciones</h3>
                <p>Los campos marcados con * son obligatorios.</p>
            </div>
        </div>
        <!-- Sección de mensajes de error globales -->
        {{#if errores}}
            <div class="alert alert-danger">
                <ul>
                    {{#each errores}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}
        <form method="POST" action="/registro/persona_fisica/paso2">
            <div class="row">
                <!-- Columna 1: Datos de contacto y contraseña -->
                <div class="col-md-6">
                    <div class="container">
                        <div class="form-group mb-3 mt-2">
                            <label for="email">Correo electrónico (será utilizado como usuario) *</label>
                            <input type="email" id="email" name="email" placeholder="Correo electrónico" required>
                        </div>

                        <div class="form-group mb-3">
                            <label for="password">Contraseña *</label>
                            <input type="password" id="password" name="password" placeholder="Contraseña" required>
                        </div>

                        <div class="form-group mb-3">
                            <label for="confirm-password">Confirme su contraseña *</label>
                            <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirmar contraseña" required>
                        </div>

                        <div class="form-group mb-3">
                            <label for="contact">Elegí otro medio de contacto</label>
                            <select id="contact" name="contact">
                                <option value="whatsapp">Whatsapp</option>
                                <option value="telephone-number">Teléfono</option>
                                <option value="null">Ninguno</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label for="contact-number">Número de contacto</label>
                            <input type="number" id="contact-number" name="contact-number" placeholder="Número de contacto">
                        </div>
                    </div>
                </div>

                <!-- Columna 2: Contribuciones -->
                <div class="col d-flex align-items-center justify-content-center">
                    <div class="card-md" >
                        <h5 class="mb-3" style="margin-right: 4rem">Seleccioná tus formas de contribución (al menos una requerida):</h5>
                        <div class="container">
                            <div class="form-check mb-3" style="margin-left: 8rem">
                                <input class="form-check-input" type="checkbox" value="dinero" id="money" name="contribution[]">
                                <label class="form-check-label" for="money">
                                    Donación de Dinero
                                </label>
                            </div>

                            <div class="form-check mb-3" style="margin-left: 8rem">
                                <input class="form-check-input" type="checkbox" value="donacion-viandas" id="food-donation" name="contribution[]">
                                <label class="form-check-label" for="food-donation">
                                    Donación de Viandas
                                </label>
                            </div>

                            <div class="form-check mb-3" style="margin-left: 8rem">
                                <input class="form-check-input" type="checkbox" value="distribucion-viandas" id="food-distribution" name="contribution[]">
                                <label class="form-check-label" for="food-distribution">
                                    Distribución de Viandas
                                </label>
                            </div>

                            <div class="form-check mb-3" style="margin-left: 8rem">
                                <input class="form-check-input" type="checkbox" value="tarjetas" id="cards-distribution" name="contribution[]">
                                <label class="form-check-label" for="cards-distribution">
                                    Distribución de Tarjetas
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Botón de envío -->
            <div class="container text-center mt-4">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary-alt">Enviar</button>
                </div>
            </div>
        </form>
    </div>
{{/partial}}

